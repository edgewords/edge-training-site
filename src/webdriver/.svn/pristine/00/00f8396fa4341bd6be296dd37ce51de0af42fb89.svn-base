    <script>
        $('#colour-picker select').colourPicker({
            ico: 'images/jquery.colourPicker.gif', 
            title:    false
        });
        
        $('#floater').click(function() {
            if($(this).css('float') == 'left') {
                $(this).css('float','right');
                $(this).html('Click to<br/>float left');
            } else {
                $(this).css('float','left');
                $(this).html('Click to<br/>float right');                
            }
        });
        
        $(function() {
            $( "#slider" ).slider({
                min:0,
                max:300,
                value:150,
                slide: function(event,ui) {
                    var height = $(this).slider('value');
                    $('#apple').css('height',height);
                    $('#height-value').text(height);
                }
            });
        });
    </script>
